<section class="flex flex-col items-center justify-center text-center h-screen px-4">
    <div class="max-w-md">
      <div class="text-5xl font-bold my-4">
        {{ section.settings.title }}
      </div>
    </div>
  
    <div class="my-4">
      {% if section.settings.button_url == blank %}
        {% assign shop_url = shop.secure_url  %} 
      {% else %}
        {% assign shop_url = section.settings.button_url %}
      {% endif %} 
  
      <p class="text-base md:text-xl leading-normal">
        {{ section.settings.subtext }}
      </p>
    </div>
  
    <div class="my-4"> 
      <a href="{{ shop_url }}" class="px-4 py-2 font-medium shadow bg-green-600 hover:bg-green-800 text-white inline-block">
        {{ section.settings.button_label }} 
      </a>
    </div>
  </section>
  
  {% schema %}
  {
    "name": "Template 404",
    "tag": "section",
    "class": "flex items-center justify-center text-center py-7 h-screen",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "404",
        "info": "This is the title for the 404 page"
      },
      {
        "type": "text",
        "id": "subtext",
        "label": "Subtext",
        "default": "The page you are looking for does not exist.",
        "info": "This is the subtext for the 404 page"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button Label",
        "default": "Back to Homepage",
        "info": "This is the button label for the 404 page"
      },
      {
        "type": "url",
        "id": "button_url",
        "label": "Button URL",
        "default": "/",
        "info": "This is the button URL for the 404 page"
      }
    ]
  }
  {% endschema %}
  
