{% comment %} Master article wrapper with block-based drag-and-drop support {% endcomment %}
<article class="max-w-7xl mx-auto" itemscope itemtype="https://schema.org/BlogPosting">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'article_title' %}
        {% render 'article/article-title' %}
      {% when 'article_author' %}
        {% render 'article/article-meta' %}
      {% when 'article_published_date' %}
        {% render 'article/article-meta' %}
      {% when 'featured_image' %}
        {% render 'article/article-image' %}
      {% when 'article_content' %}
        {% render 'article/article-content' %}
    {% endcase %}
  {% endfor %}

  {% if blog.comments_enabled? %}
    {% render 'article/article-comments' %}
  {% endif %}
</article>

{% schema %}
{
  "name": "Template Article  Modular",
  "settings": [],
  "blocks": [
    {
      "type": "article_title",
      "name": "Title",
      "limit": 1
    },
    {
      "type": "article_author",
      "name": "Author",
      "limit": 1
    },
    {
      "type": "article_published_date",
      "name": "Published Date",
      "limit": 1
    },
    {
      "type": "featured_image",
      "name": "Thumbnail",
      "limit": 1
    },
    {
      "type": "article_content",
      "name": "Content",
      "limit": 1
    }
  ]
}
{% endschema %}
