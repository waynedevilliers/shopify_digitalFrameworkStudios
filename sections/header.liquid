{% assign main_menu_linklist = linklists[section.settings['main-menu']].links %}

<header
  class="relative {% if section.settings.enable_sticky %}sticky top-0 z-50{% endif %}"
  style="background-color: {{ section.settings.header_background }}"
>
  <div class="mx-auto px-4 sm:px-6">
    <div class="flex justify-center items-center py-6 md:justify-start md:space-x-10">
      <!-- Store Logo -->
      <div class="flex justify-start lg:flex-1 truncate">
        {% if section.settings.logo_image %}
          <img
            src="{{ section.settings.logo_image | image_url }}"
            alt="{{ section.settings.logo_alt | escape }}"
            class="h-8 w-auto"
          >
        {% else %}
          <h1 class="text-xl font-bold truncate">{{ shop.name }}</h1>
        {% endif %}
      </div>

      <!-- Mobile Menu Button -->
      <div class="-mr-2 -my-2 ml-3 md:hidden">
        <button
          @click="mobileMenuOpen = true"
          type="button"
          class="bg-white p-2 inline-flex items-center justify-center focus:outline-none"
          aria-label="Open mobile menu"
        >
          {% render 'icon-hamburger' %}
        </button>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex gap-4" aria-label="Primary navigation">
        {% for link in main_menu_linklist %}
          {% if link.links != blank %}
            <div class="relative flex items-center gap-2" x-data="{ open: false }">
              <!-- Blog link (navigates directly) -->
              <a
                href="{{ link.url }}"
                class="text-base text-gray-500 hover:text-gray-900"
              >
                {{ link.title }}
              </a>
              <!-- Dropdown toggle icon and menu -->
              <div class="relative">
                <button
                  @click="open = !open"
                  type="button"
                  class="p-1 focus:outline-none hover:text-gray-900"
                  aria-haspopup="true"
                  :aria-expanded="open.toString()"
                  aria-label="Toggle submenu"
                >
                  {% render 'icon-dropdown' %}
                </button>

                <div
                  x-show="open"
                  @click.away="open = false"
                  class="absolute left-0 mt-2 w-48 bg-white shadow-lg border border-gray-100 rounded-lg z-50"
                  x-transition
                >
                  <ul class="py-2" role="menu">
                    {% for childlink in link.links %}
                      <li role="none">
                        <a
                          href="{{ childlink.url }}"
                          class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                          role="menuitem"
                        >
                          {{ childlink.title }}
                        </a>
                      </li>
                    {% endfor %}
                  </ul>
                </div>
              </div>
            </div>

          {% else %}
            <div class="relative">
              <a href="{{ link.url }}" class="text-base text-gray-500 hover:text-gray-900">
                {{ link.title }}
              </a>
            </div>
          {% endif %}
        {% endfor %}
      </nav>

      <!-- Cart + Account Links -->
      <nav class="hidden md:flex items-center justify-end gap-3 md:flex-1">
        <a
          href="{{ routes.cart_url }}"
          class="whitespace-nowrap text-base text-gray-500 hover:text-gray-900"
          aria-label="Cart"
        >
          {% render 'icon-shopping-bag' %}
        </a>
        {% if section.settings.show_account_links and shop.customer_accounts_enabled %}
          <a href="{{ routes.account_login_url }}" class="text-base text-gray-500 hover:text-gray-900">Login</a>
          <a href="{{ routes.account_register_url }}" class="text-base text-gray-500 hover:text-gray-900">Register</a>
        {% endif %}
      </nav>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo Image",
      "info": "Upload your store logo"
    },
    {
      "type": "text",
      "id": "logo_alt",
      "label": "Logo Alt Text",
      "default": "Store logo"
    },
    {
      "type": "text",
      "id": "mobile_menu_title",
      "label": "Mobile Menu Title",
      "default": "Menu"
    },
    {
      "type": "link_list",
      "id": "main-menu",
      "label": "Main Menu",
      "default": "main-menu"
    },
    {
      "type": "checkbox",
      "id": "enable_sticky",
      "label": "Enable Sticky Header",
      "default": false
    },
    {
      "type": "color",
      "id": "header_background",
      "label": "Header Background Color",
      "default": "#ffffff"
    },
    {
      "type": "checkbox",
      "id": "show_account_links",
      "label": "Show Login & Register Links",
      "default": true
    }
  ]
}
{% endschema %}
