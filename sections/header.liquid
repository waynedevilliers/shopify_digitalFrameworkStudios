{% assign main_menu_linklist = linklists[section.settings['main-menu']].links %}

<header class="relative bg-white" x-data="{ mobileMenuOpen: false }">
  <div class="mx-auto px-4 sm:px-6">
    <div class="flex justify-center items-center py-6 md:justify-start md:space-x-10">
      <!-- STORE LOGO / NAME -->
      <div class="flex justify-start lg:flex-1 truncate">
        <h1 class="text-xl font-bold truncate">{{ shop.name }}</h1>
      </div>

      <!-- MOBILE MENU BUTTON -->
      <div class="-mr-2 -my-2 ml-3 md:hidden">
        <button
          @click="mobileMenuOpen = true"
          type="button"
          class="bg-white p-2 inline-flex items-center justify-center focus:outline-none"
          aria-label="Open mobile menu"
        >
          {% render 'icon-hamburger' %}
        </button>
      </div>

      <!-- DESKTOP NAVIGATION -->
      <nav class="hidden md:flex space-x-10" aria-label="Primary navigation">
        {% for link in main_menu_linklist %}
          {% if link.links != blank %}
            <div class="relative" x-data="{ open: false }">
              <button
                @click="open = !open"
                type="button"
                class="flex items-center justify-between gap-2 text-base text-gray-500 hover:text-gray-900"
                aria-haspopup="true"
                :aria-expanded="open.toString()"
              >
                {{ link.title }}
                {% render 'icon-dropdown' %}
              </button>

              <div
                x-show="open"
                @click.away="open = false"
                class="absolute left-0 mt-2 w-48 bg-white shadow-lg border border-gray-100 rounded-lg z-50"
              >
                <ul class="py-2" role="menu">
                  {% for childlink in link.links %}
                    <li role="none">
                      <a
                        href="{{ childlink.url }}"
                        class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                        role="menuitem"
                      >
                        {{ childlink.title }}
                      </a>
                    </li>
                  {% endfor %}
                </ul>
              </div>
            </div>
          {% else %}
            <div class="relative">
              <a href="{{ link.url }}" class="text-base text-gray-500 hover:text-gray-900">
                {{ link.title }}
              </a>
            </div>
          {% endif %}
        {% endfor %}
      </nav>

      <!-- CART + ACCOUNT (DESKTOP) -->
      <div class="hidden md:flex items-center justify-end md:flex-1 space-x-5">
        <a
          href="{{ routes.cart_url }}"
          class="whitespace-nowrap text-base text-gray-500 hover:text-gray-900"
          aria-label="Cart"
        >
          {% render 'icon-shopping-bag' %}
        </a>
        {% if shop.customer_accounts_enabled %}
          <a href="{{ routes.account_login_url }}" class="text-base text-gray-500 hover:text-gray-900">Login</a>
          <a href="{{ routes.account_register_url }}" class="text-base text-gray-500 hover:text-gray-900">Register</a>
        {% endif %}
      </div>
    </div>
  </div>

  <!-- MOBILE MENU -->
  <div x-show="mobileMenuOpen" class="absolute z-10 top-0 inset-x-0 p-2 transform origin-top-left md:hidden">
    <nav class="shadow-lg rounded-lg ring-1 ring-black ring-opacity-5 bg-white w-full" aria-label="Mobile navigation">
      <div class="p-5 divide-y-2 divide-gray-50">
        <!-- MOBILE HEADER -->
        <div class="flex items-center justify-between pb-3">
          <h2 class="text-lg text-gray-500">{{ section.settings.mobile_menu_title }}</h2>
          <button
            @click="mobileMenuOpen = false"
            type="button"
            class="bg-white rounded-md p-2 text-gray-500"
            aria-label="Close mobile menu"
          >
            {% render 'icon-close' %}
          </button>
        </div>

        <!-- MOBILE NAV LINKS -->
        <ul class="pt-3 space-y-4">
          {% for link in main_menu_linklist %}
            {% assign link_handle = link.handle | replace: '-', '_' %}
            {% if link.links != blank %}
              <li class="relative" x-data="{ open_{{ link_handle }}: false }">
                <button
                  @click="open_{{ link_handle }} = !open_{{ link_handle }}"
                  type="button"
                  class="text-base text-gray-500 hover:text-gray-900 flex items-center justify-between w-full"
                  aria-haspopup="true"
                  :aria-expanded="open_{{ link_handle }}.toString()"
                >
                  {{ link.title }}
                  {% render 'icon-dropdown' %}
                </button>

                <ul x-show="open_{{ link_handle }}" @click.away="open_{{ link_handle }} = false" class="pl-4 space-y-2">
                  {% for childlink in link.links %}
                    <li>
                      <a
                        href="{{ childlink.url }}"
                        class="block text-sm text-gray-700 hover:text-gray-900"
                      >
                        {{ childlink.title }}
                      </a>
                    </li>
                  {% endfor %}
                </ul>
              </li>
            {% else %}
              <li>
                <a
                  href="{{ link.url }}"
                  class="block px-4 py-2 text-base text-gray-500 hover:text-gray-900 hover:bg-gray-50 rounded-md"
                >
                  {{ link.title }}
                </a>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
    </nav>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "text",
      "id": "mobile_menu_title",
      "label": "Mobile Menu Title",
      "default": "Menu",
      "info": "This is the title for the mobile menu window"
    },
    {
      "type": "link_list",
      "id": "main-menu",
      "label": "Main Menu",
      "default": "main-menu",
      "info": "This is the main menu for the store"
    },
    {
      "type": "text",
      "id": "logo",
      "label": "Logo",
      "default": "Logo",
      "info": "This is the logo for the store"
    },
    {
      "type": "text",
      "id": "logo_url",
      "label": "Logo URL",
      "default": "https://via.placeholder.com/150",
      "info": "This is the URL for the logo"
    },
    {
      "type": "text",
      "id": "logo_alt",
      "label": "Logo Alt Text",
      "default": "Logo",
      "info": "This is the alt text for the logo"
    }
  ]
}
{% endschema %}
